{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "commands": [
        "src/commands/"
      ],
      "config": [
        "src/config/"
      ],
      "helpers": [
        "src/helpers"
      ]
    },
    "checkJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "outDir": "./dist/",
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "typeRoots": [
      "node_modules/@types/"
    ],
    "module": "ESNext",
    "target": "ES3"
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "node_modules/**/*",
    "./src/**.test.ts",
    "./src/**.test.tsx",
    "./src/**.spec.ts",
    "./src/**.spec.tsx"
  ]
}
